# -----------------------------------------------------------------------------
# AUTHENTICATION (CLERK)
# -----------------------------------------------------------------------------
# Public key for client-side Clerk SDK
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...

# Secret key for server-side auth verification
CLERK_SECRET_KEY=sk_test_...

# Clerk redirects
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# -----------------------------------------------------------------------------
# DOMAIN API CONNECTION
# -----------------------------------------------------------------------------
# Server-side API URL (Docker internal network or upstream URL)
API_URL=http://localhost:4000

# Client-side API URL (Browser accessible URL)
PUBLIC_API_URL=http://localhost:4000

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
# Database password (if applicable for direct connections, otherwise API handles it)
DATABASE_PASSWORD=your_secure_password
